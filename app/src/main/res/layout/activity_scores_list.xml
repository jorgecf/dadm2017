<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/scores_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView, CHANGEME" />

    <es.uam.eps.dadm.jorgecifuentes.views.EmptyRecyclerView
        android:id="@+id/scores_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/listBackground" />

    <LinearLayout
        android:id="@+id/scores_empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:textAlignment="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16dp"
            android:text="@string/rounds_empty" />


    </LinearLayout>

</LinearLayout>