<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/reset_round_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:src="@drawable/ic_undo_24dp" />


    <!-- Titulo -->


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp">

        <TextView
            android:id="@+id/round_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="@dimen/title_size"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@id/board_reversiview" />

        <ImageButton
            android:id="@+id/white_score_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_white_piece_24dp"
            android:layout_below="@id/round_title"
            android:layout_toRightOf="@id/board_reversiview"/>


        <ImageButton
            android:id="@+id/black_score_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentRight="true"
            android:layout_below="@id/round_title"

            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_black_piece_24dp" />

        <TextView
            android:id="@+id/white_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/round_title"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"

            android:layout_toEndOf="@+id/white_score_button"
            android:layout_toRightOf="@+id/white_score_button"
            android:text="15" />

        <TextView
            android:id="@+id/black_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/round_title"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"

            android:layout_toLeftOf="@+id/black_score_button"
            android:layout_toStartOf="@+id/black_score_button"
            android:text="17" />


        <!-- Tablero -->
        <es.uam.eps.dadm.jorgecifuentes.views.ReversiView
            android:id="@+id/board_reversiview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />
    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>



