<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.uam.eps.dadm.jorgecifuentes">

    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Launcher">



        <activity android:name=".activities.LoginActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.RoundListActivity"
            android:parentActivityName=".activities.LoginActivity" />

        <activity
            android:name=".activities.RoundActivity"
            android:parentActivityName=".activities.RoundListActivity"></activity>

        <activity
            android:name=".activities.PreferenceActivity"
            android:parentActivityName=".activities.RoundListActivity" />

        <activity
            android:name=".activities.ContactsActivity"
            android:parentActivityName=".activities.PreferenceActivity">

            <intent-filter>
                <action android:name="open.contacts.action" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.HelpActivity"
            android:parentActivityName=".activities.RoundListActivity" />

        <activity
            android:name=".activities.ScoreActivity"
            android:parentActivityName=".activities.RoundListActivity" />


    </application>

</manifest>
